<!DOCTYPE html>
<html>
<head>
  <title>UFMG Student Chapter</title>

  <link rel="stylesheet" type="text/css" href="/semantic-ui/semantic.min.css">
  <link rel="stylesheet" type="text/css" href="/css/app.css">
  <link rel="shortcut icon" type="image/x-icon" href="/img/favicon.ico">
</head>
<body>
  <div class="ui borderless main menu">
    <div class="ui container">
      <a href="/" class="header item">
        <i class="home icon"></i>
        UFMG Student Chapter
      </a>
      <a href="/courses" class="item"> <i class="book icon"></i> Cursos </a>
      <a href="/contact" class="item"> <i class="mail envelope outline icon"></i> Contato </a>
      {{#if currentUser}}
        <a href="/admin" class="item"> <i class="dashboard icon"></i> Painel de Controle </a>
      {{/if}}
      <div class="right menu">
        {{#if currentUser}}
          <div class="item">Iniciou a sess√£o como &nbsp;<b> {{currentUser.username}}</b></div>
          <a href="/admin/logout" class="item"> <i class="sign out icon"></i> Sair</a>
        {{/if}}
      </div>
    </div>
  </div>

  {{> messages}}

  {{#if currentUser}}
    {{{body}}}
  {{else}}
    {{{body}}}
  {{/if}}


  <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
  <script src="/semantic-ui/semantic.min.js"></script>
  <script type="text/javascript">
    // Fix main menu to page on passing
    $('.main.menu').visibility({
      type: 'fixed'
    });

    $(document).ready(function () {
      // Trigger Animations
      $(".animation[data-animation-trigger='bottom']").visibility({
        onBottomVisible: function() {
          $(this).transition({
            animation: $(this).attr('data-animation'),
            duration: $(this).attr('data-animation-duration') ? $(this).attr('data-animation-duration') : '1.5s',
          });
        }
      })
      $(".animation[data-animation-trigger='top']").visibility({
        onTopVisible: function() {
          $(this).transition({
            animation: $(this).attr('data-animation'),
            duration: $(this).attr('data-animation-duration') ? $(this).attr('data-animation-duration') : '1.5s',
          });
        }
      })

      // Notifications Close
      $('.message .close')
        .on('click', function() {
          $(this)
            .closest('.message')
            .transition('fade down')
          ;
        });

      $('.notification').delay(7000).queue(function() {
        $(this).transition({
          animation: 'fade down',
          duration: '1.0s'
        });
      });
    })
  </script>
</body>
</html>
