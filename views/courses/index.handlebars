<div class="ui center aligned container">
	<h1 class="ui horizontal header divider">
		<i class="blue book middle aligned icon"></i> Cursos Ofertados
	</h1>
	<div class="ui cards">
		{{#each courses}}
			<div class="ui raised centered card">
				<div class="image">
					<img src="{{image}}">
				</div>
				<div class="content">
					<a href="/courses/{{_id}}" class="header"> {{name}} </a>
					<div class="meta">
						<span class="date"><i class="calendar icon"></i> {{moment date 'DD/MM/YYYY'}}</span>
					</div>
					<div class="description">
						{{#ifCond description.length '>' 100}}
							{{substring description 0 100}}
						{{else}}
							{{description}}
						{{/ifCond}}
					</div>
				</div>
				<div class="extra content">
					<a href="/courses/{{_id}}" class="ui blue fluid button">
						Reservar
					</a>
				</div>
			</div>
		{{/each}}
	</div>
</div>
